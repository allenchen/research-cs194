<div id="job#{job.id}" class="job_<%= cycle('even', 'odd') %>">
	<div class="job_padding_wrapper">
		<table class="job_table">
			<tr>
				<td class="job_table_left">
					<div class="job_title"><%= job.title %></span> (<%= (job.faculties != []) ? job.faculties.first.name : "no faculty sponsor" %>)</div>
					<div class="job_desc"><%= job.desc %></div>
				</td>
				<td class="job_credit">
					<div class="job_attr"><%= job.paid ? "Option for Pay" : "No Pay" %></span>
				</td>
				<td class="job_credit">
					<div class="job_attr"><%= job.credit ? "Option for Credit" : "No Credit" %></span>
				</td>
				<td class="job_extra"></td>
			</tr>
		</table>
	</div>
</div>