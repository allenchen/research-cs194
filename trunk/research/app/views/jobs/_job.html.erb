<div id="job<%= job.id %>" class="job_<%= cycle('even', 'odd') %>">
	<div class="job_padding_wrapper">
		<table class="job_table">
			<tr>
				<td class="job_table_left">
					<div class="job_title"><a href="<%= job_path(job) %>"><%= job.title %></a></span> (<%= (job.faculties != []) ? job.faculties.first.name : "no faculty sponsor" %>) 
					<% if logged_in? && job.user_id == current_user.id %>
						<%= link_to "[edit]", :action => :edit, :id => job.id %>
					<% end %>
					</div>
					<% job_categories = job.categories %>
					<% if !job_categories.empty? %>
						<div class="job_category">
						Tags:
							<% if job.tag_list.empty? %>
								(none)
							<% else %>
								<% job.tag_list.each do |tag| %>
									<span class="tag"><%=h tag %></span>
								<% end %>
							<% end %>
						</div>
					<% end %>
					
					<div class="job_desc">
					<span id="job_desc_<%= job.id %>"><%= truncate(job.desc, 100, "...") %></span> 
					<% if job.desc.length > 100 %>
						<%= link_to_remote "[read more]", :update=>"job_desc_#{job.id}", :url => {:action=>:job_read_more, :id=>job.id} %> <%= link_to_remote "[read less]", :update=>"job_desc_#{job.id}", :url => {:action=>:job_read_less, :id=>job.id} %>
					<% end %>
					
					
					</div>
				</td>
				<td class="job_credit">
					<div class="job_attr"><%= job.paid ? "<b>Paid</b>" : "Unpaid" %></span>
				</td>
				<td class="job_credit">
					<div class="job_attr"><%= job.credit ? "<b>Credit</b>" : "No Credit" %></span>
				</td>
				<td class="job_credit">
					<div class="job_attr"><%= job.num_positions == 0 ? "No limit" : job.num_positions.to_s %></span>
				</td>

				<td class="job_extra"></td>
			</tr>
		</table>
	</div>
</div>