<div id="job<%= job.id %>" class="job_<%= cycle('even', 'odd') %>">
	<div class="job_padding_wrapper">
		<table class="job_table">
            <tr>
				<td class="job_table_left">
					<div class="job_title">
                    <a href="<%= job_path(job) %>" title="Click to apply for this research position!"><%= job.title %></a>
                    (<%= (job.faculties != []) ? job.faculties.first.name : "no faculty sponsor" %>) 
					<% if logged_in? && job.user_id == current_user.id %>
						<%= link_to "[edit]", :controller=>:jobs, :action => :edit, :id => job.id %>
					<% end %>
					<% if job.users.include?(current_user) %>
						<%= link_to "[unwatch]", :controller=>:jobs, :action => :unwatch, :id => job.id %>
					<% else %>
						<%= link_to "[watch]", :controller=>:jobs, :action => :watch, :id => job.id %>
					<% end %>
					</div>
					<% job_tags = job.tag_list %>
					<% if !job_tags.empty? %>
						<div class="job_tags">
                        <%= image_tag 'tag.gif' %>
						Tags:
							<% if job_tags.empty? %>
								(none)
							<% else %>
								<% job_tags.each do |tag| %>
									<span class="tag"><%=h tag %></span>
								<% end %>
							<% end %>
						</div>
					<% end %>
					
					<div class="job_desc">
					<span id="job_desc_<%= job.id %>"><%= truncate(job.desc, 100, "...") %></span> 
					<% if job.desc.length > 100 %>
						<%= link_to_remote "[read more]", :update=>"job_desc_#{job.id}", :url => {:controller=> :jobs, :action=>:job_read_more, :id=>job.id} %> <%= link_to_remote "[read less]", :update=>"job_desc_#{job.id}", :url => {:controller=>:jobs, :action=>:job_read_less, :id=>job.id} %>
					<% end %>
					</div>
				</td>
				<td class="job_credit">
					<div class="job_attr"><%= job.paid ? image_tag('yes_check.gif') : image_tag('no_check.gif') %></div>
				</td>
				<td class="job_credit">
					<div class="job_attr"><%= job.credit ? image_tag('yes_check.gif') : image_tag('no_check.gif') %></div>
				</td>
				<td class="job_credit">
					<div class="job_attr"><span class="job_numpositions"><%= job.num_positions == 0 ? "No limit" : job.num_positions.to_s %></span></div>
				</td>

			</tr>
		</table>
	</div>
</div>