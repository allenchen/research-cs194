
<div id="job_show_main">
<br />
<h2>Delete Listing</h2>
<p>
  Are you sure you would like to delete the following listing? This action cannot be undone.
</p>
<br />
<div class="dashboard_container">
  <div class="dashboard_wrapper_medium">
    <div class="dashboard_container_medium box_shadow">
      <h3><%= link_to @job.title, :controller => "jobs", :action => "show", :id => @job.id %></h3>
      <p><b>Faculty Sponsor: </b>
          <% @job.faculties.each do |f| %> 
	        <%= f.name %> 
          <a href="http://www.google.com/search?btnI=I%27m+Feeling+Lucky&ie=UTF-8&oe=UTF-8&q=<%= f.name %> Berkeley <%= @job.department.name %>" target="_blank">
        		<%= image_tag(@job.department.name.downcase + "_icon.gif") %>
		      </a>
          <% end %> 
      </p>
    </div>
  </div>
</div>

<br /><br />

<div class="inline-form-container">

  <%= button_to "Delete", {:action => "destroy", :id => @job.id}, :method => :delete, :class => "inline-form-element" %>&nbsp;&nbsp;&nbsp;
  <input type="button" value="Cancel" onclick="location.href='<%= jobs_path %>'" />

</div>

<br /><br />

<%= link_to "&#0171; Back to listings", :controller => :jobs, :action => :index %>
<br /><br /><br /><br />



</div>
