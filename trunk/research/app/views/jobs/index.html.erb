<%= render :partial => "dashboard/menu_bar" %>

<h1>Listing jobs</h1>
<%= stylesheet_link_tag "job" %>
<br>

<div id="search_bar">
	<% form_for :search_terms, :url => {:controller => :jobs, :action => :list} do |f| %>
		<%= f.text_field :query, {:value=>"keyword query"} %>
		<%= f.select :department_select, [["All Departments",0]] + Department.all.collect {|c| [c.name, c.id]} %>
		<%= f.select :faculty_select, [["All Faculty",0]] + Faculty.all.collect {|c| [c.name, c.id]} %>
		Paid? <%= f.check_box :paid %>
		Credit? <%= f.check_box :credit %>
		<%= f.submit "Search" %>
	<% end %>
</div>

<br>

  <%= render :partial => "job", :collection => @jobs %>

  
  select("post", "person_id", Person.all.collect {|p| [ p.name, p.id ] }, {:prompt => 'Select Person'})